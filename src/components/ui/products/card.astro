---
import { Picture } from "astro:assets";

const { imageSrc, imageAlt, title, description, link } = Astro.props;
---

<div
  class="card bg-[#ffffff] shadow-lg rounded-lg overflow-hidden"
  style="width: 18rem;">
  <Picture
    src={imageSrc}
    alt={imageAlt}
    sizes="(max-width: 768px) 100vw, 50vw"
    loading="eager"
    format="avif"
    class="w-full h-48 object-cover"
  />
  <div class="p-4">
    <h1 class="text-xl font-bold mb-2">{title}</h1>
    <p class="text-gray-700 mb-4">{description}</p>
    <a
      href={link}
      class="inline-block px-4 py-2 text-white bg-[#F4B223] hover:bg-[#E5A420] rounded-lg transition-colors mx-auto block text-center"
      >Ver m√°s</a
    >
  </div>
</div>
